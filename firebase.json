{
    "database": {
        "rules": "build/database.rules.json"
    },
    "hosting": {
        "public": "build",
        "ignore": [
            "firebase.json",
            "database.rules.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "/service-worker.js",
                "headers": [{ "key": "Cache-Control", "value": "no-cache" }]
            }
        ]
    },
    "functions": {
        "predeploy": ["npm --prefix $RESOURCE_DIR run lint"]
    }
}
