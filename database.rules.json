{
    "rules": {
        "schedule": {
            ".read": "true",
            ".write":
                "auth != null && root.child('/users/' + auth.uid + '/permissions/manageSchedule').val() === true"
        },
        "tasks": {
            ".read": "true",
            "$weekId": {
                "$dayOfWeek": {
                    "$lesson": {
                        "taskText": {
                            ".write":
                                "auth != null && root.child('/users/' + auth.uid + '/permissions/manageTasks').val() === true"
                        },
                        "lessonName": {
                            ".write":
                                "auth != null && root.child('/users/' + auth.uid + '/permissions/manageTasksLessons').val() === true"
                        }
                    }
                }
            }
        },
        "users": {
            "$uid": {
                ".read": "$uid === auth.uid",
                ".write":
                    "auth != null && root.child('/users/' + auth.uid + '/permissions/manageUsers').val() === true"
            }
        }
    }
}
